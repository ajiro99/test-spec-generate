<div class="page-header">
  <%= link_to new_project_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    <%= t('view.New Project') %>
  <% end %>
  <h3><%= t('view.Listing projects') %></h3>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th><%= t('view.project_name') %></th>
            <th><%= t('view.description') %></th>
            <th><%= t('view.created_at') %></th>
            <th><%= t('view.updated_at') %></th>
            <th colspan="3">Actions</th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @projects) do |project| %>
            <td><%= link_to "#{project.project_name}", project_scenarios_path(project) %></td>
            <td><%= project.description %></td>
            <td><%= project.created_at.strftime("%Y/%m/%d %H:%M")  %></td>
            <td><%= project.updated_at.strftime("%Y/%m/%d %H:%M")  %></td>
            <td><%= link_to t('view.Edit'), edit_project_path(project) %></td>
            <td><%= link_to t('view.Destroy'), project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <td><%= link_to t('view.Export'), export_path(project, format: :xlsx) %></td>
      <% end %>
    </tbody>
  </table>
</div>