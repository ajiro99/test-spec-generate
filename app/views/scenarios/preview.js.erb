$(function() {

var table = $('<table class="table table-striped table-bordered table-hover">');

var th = $('<tr>')
.append('<th width="5%"><%= t('view.no') %></th>')
.append('<th width="25%"><%= t('view.screen_name') %></th>')
.append('<th width="35%"><%= t('view.test_content') %></th>')
.append('<th width="35%"><%= t('view.check_content') %></th>');

table.append($('<thead>').append(th));

var tbody = $('<tbody>');
<% @preview.each do |preview| %>
    var td = $('<tr>')
    .append('<td>' + "<%= preview[:no] %>" + '</td>')
    .append('<td>' + "<%= simple_format(preview[:screenName]) %>" + '</td>')
    .append('<td>' + "<%= simple_format(preview[:testContent]) %>" + '</td>')
    .append('<td>' + "<%= simple_format(preview[:checkContent]) %>" + '</td>');

    tbody.append(td);
<% end %>

table.append(tbody);

$('#error').html('');
$('#previewtable').html(table);
});